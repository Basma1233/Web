{% extends "//form.html.twig" %}
{% block title %} Acceuil {% endblock %}
{% block head %}
{% endblock %}
{% block body %}
    {% block contents %}
        {{ form_start(form) }}
        <div class="right_col" role="main">
            <div style="padding: 100px;padding-left: 300px">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Ajouter les absences</h3>
                    </div>

                    <div class="title_right">
                        <div class="col-md-5 col-sm-5  form-group pull-right top_search">

                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 ">
                        <div class="x_panel">

                            <div class="x_content">
                                <br/>
                                <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                                    <div class="item form-group">
                                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Matiere<span
                                                    class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 ">
                                            {{ form_widget(form.matiere,{ 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">Classe <span
                                                    class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 ">
                                            {{ form_widget(form.classe,{ 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label  class="col-form-label col-md-3 col-sm-3 label-align" type="" for="last-name">Date
                                            <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 ">
                                            {{ form_widget(form.date,{ 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label  class="col-form-label col-md-3 col-sm-3 label-align" type="" for="last-name">Heur de debut
                                            <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 ">
                                            {{ form_widget(form.hdep,{ 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label  class="col-form-label col-md-3 col-sm-3 label-align" type="" for="last-name">Heur de la fin
                                            <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 ">
                                            {{ form_widget(form.hfin,{ 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-6 offset-md-3">
                                        {{ form_widget(form._token) }}
                                        <button type="submit" class="btn btn-success">Ajouter</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}

    {% endblock %}
{% endblock %}