{% extends "//form.html.twig" %}
{% block title %} Acceuil {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {% block contents %}
       <div style="padding: 100px">
        <br>
        {% for message in app.flashes ('ajouterans') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes ('modifabs') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes ('suppabs') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <button type="button" class="btn btn-success"><a href="absajout" style="color: #fff;">Ajouter absence</a></button>
        <br><br>

        <table id="datatable" class="table table-striped table-bordered" style="">
        <thead>
        <tr>
            <th>Id</th>
            <th>Matiére</th>
            <th>classe</th>
            <th>Date</th>
            <th>Heur de debut</th>
            <th>Heur de fin</th>

            <th>Action</th>

        </tr>
        </thead>


        <tbody>
        {% for a in abs %}
            <tr>
                <td>{{ a.id }}</td>
                <td>{{ a.matiere }}</td>
                <td>{{ a.classe}}</td>
                <td>{{ a.date |date("m/d/Y")}}</td>
                <td>{{ a.hdep }}</td>
                <td>{{ a.hfin}}</td>
                <td>

                    <div class="icon "><a href="{{ path('select',{'id':a.id}) }}"><i class="btn btn-primary icon icon-list-ul"></i> </a><a href="{{ path('absm',{'id':a.id}) }} "><i class="btn btn-info icon icon-pencil"></i> </a><i class="btn btn-danger icon icon-remove"  data-toggle="modal" data-target="#basicExampleModal"></i>


                    <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Supprimer</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Vous eters sure de supprimé cette absence?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                    <a href="{{ path('abssup',{'id':a.id}) }} "><button type="button" class="btn btn-danger">Supprimer</button></a>
                                    {% endfor %}
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>

            </tbody>
            </table>



       </div>
    {% endblock %}
{% endblock %}
